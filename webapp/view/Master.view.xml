<mvc:View controllerName="ejercicio.examen.controller.Master"
    	xmlns="sap.ui.table"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:c="sap.ui.core"
		xmlns:m="sap.m"
  		height="100%">
	<m:Page
		showHeader="false"
		enableScrolling="false"
		class="sapUiContentPadding">
		<m:content>

			<m:Label text="Product" labelFor="productInput" />
		<m:Input
			id="productInput"
			placeholder="Enter a optimal Stock"
			liveChange="onInputChange"
			>
			<m:suggestionItems>
				<c:Item text="{Name}" />
			</m:suggestionItems>
		</m:Input>
			<Table
				rows="{/Products}"
				selectionMode="MultiToggle"
				visibleRowCount="7"
				paste="onPaste"
				ariaLabelledBy="title"
                id="myTable"
                >
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Products"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column width="11rem">
						<m:Label text="Product Name" />
						<template>
							<m:Link text="{ProductName}" press="onClicked" wrapping="false" />
						</template>
					</Column>
					<Column width="11rem">
						<m:Label text="Price" />
						<template>
							<m:Text text="$ {UnitPrice}" wrapping="false" />
						</template>
					</Column>
					<Column width="11rem">
						<m:Label text="Stock" />
						<template>
							<m:Text text="{UnitsInStock}" wrapping="false" />
						</template>
					</Column>
					<Column width="8rem">
						<m:Label text="Category" />
						<template>
							<m:Text text="{/Category/CategoryName}" wrapping="false" />
						</template>
					</Column>
					<Column width="8rem">
						<m:Label text="Supplier" />
						<template>
							<m:Text text="{/Supplier/SupplierName}" wrapping="false" />
						</template>
					</Column>
					<Column width="8rem">
						<m:Label text="Discontinued" />
						<template>
							<m:Text text="{Discontinued}" 
                            wrapping="false" 
                            
                            class="{= ${/Discontinued} ? 'customSuccess' : 'customError'  }"
/>
						</template>
					</Column>
					<Column width="8rem">
						<m:Label text="Status" />
						<template>
							<m:Text text=
							"{parts: [
                        'inputValue>/value',
						'UnitsInStock'
						],
                        formatter: '.formatter.statusText'}"
						class="{= ${UnitsInStock} > 10 ? 'Accept' : 'Reject'}" 
						wrapping="false" />
						</template>
					</Column>
					<Column width="8rem">
						<m:Label text="Orders" />
						<template>
							<m:Link text="See Orders" press="pressOrders" wrapping="false" />
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>
